<%= form_with(model: album) do |form| %>
  <% if album.errors.any? %>
    <div class="alert alert-danger" role='alert'>
      <ul>
        <% album.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>      
    </div>
  <% end %>

  <div class="form-group mb-4">
      <%= form.label :artist %>
      <%= form.select :artist, @artists.collect { |p| [ p[0]["name"], p[0]["id"] ] },  {}, {class: "form-control"} %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :album_name %>
    <%= form.text_field :album_name, class: "form-control" %>
  </div>

  <div class="form-group mb-4">
    <%= form.label :year %>
    <%= select_year Date.today, {prefix: "album", start_year: 1980, end_year: Time.current.year}, class: "form-control" %>
  </div>

  <div class="form-group mb-4">
    <%= form.submit  "Save", class: "btn btn-primary" %>
  </div>
<% end %>
