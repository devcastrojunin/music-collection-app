<section class="section-forms">    
    <div class="container">
        <div class="row section-forms__box">
            <div class="col-4 section-forms__card">
                <%= flash_message %>

                <h1 class="h3 mb-3 font-weight-normal">Login</h1>
                <%= form_with url: sign_in_path do |f| %>
                    <div class="form-group mb-4">
                        <%= f.label :Username %>
                        <%= f.text_field :username, class: "form-control" %>
                    </div>
                    <div class="form-group mb-4">
                        <%= f.label :Password %>
                        <%= f.password_field :password, class: "form-control" %>
                    </div>

                    <div class="form-group mb-4">
                        <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
                    </div>
                    <div class="form-group create-account">
                        Don't have an account? <%= link_to "Create", sign_up_path %> 
                    </div>
                <% end %>

                
                
            </div>
        </div>
    </div>
</section>

